<h1 class="m-3" style="font-family: 'Noto Sans JP', sans-serif;  color: #ed636e;">
  <strong> Clinics Nearby</h1></strong>

  <div class="row m-0">
    <div class="col-6">
      <% @clinics.each do |clinic| %>

          <div class="card border mb-3">
            <div class="row m-0 ">
              <div class="col-6 p-4">
                <h3><strong><li class="list-unstyled mb-1"><%= clinic.name %></li></strong></h3>
                <% clinic.exams.each do |exam| %>
                  <div class="flex-container">
                  </div>
                  <ul class="list-unstyled">
                    <li class="mt-2"><%= exam.service %></li>
                    <li><%= exam.body_part %></li>
                    <li class="mt-2"><strong> Price: Â£<%= exam.price %></strong></li>
                  </ul>



                <div class="buttons">
                  <div class="config-button">
                      <a href="https://twitter.com/masuwa1018" class="btn effect04" data-sm-link-text="BOOK" target="_blank"><span>HOVER</span></a>
                  </div>
                </div>

                  <div class="flex-container mp-1">
                    <% exam.timeslots.each do |timeslot| %>
                      <%= link_to(
                        timeslot.date.to_formatted_s(:short),
                        new_timeslot_booking_path(timeslot),
                        class: "btn effect04 mb-2"
                      ) %>

                    <% end %>
            </div>
            <div class="col-6 p-0">
              <div class="" style="background-image: url(<%= asset_path 'clinic.jpeg' %>); height: 100%; width: 100%; object-fit: cover;"></div>
              <%#=link_to image_tag "clinic.jpeg", class: "" %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-6">
      <div style="width: 100%; height: 100vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>







