
  <h1>Clinic list</h1>

  <div class="row m-0">
    <div class="col-6">
      <% @clinics.each do |clinic| %>
        <div class="card border mb-3">
          <div class="row m-0">
            <div class="col-6">
              <h3><strong><li class="list-unstyled"><%= clinic.name %></li></strong></h3>
              <% clinic.exams.each do |exam| %>
                <div class="flex-container">
                </div>
                <ul class="list-unstyled">
                  <li><%= exam.service %></li>
                  <li><%= exam.body_part %></li>
                  <li><strong> Price: Â£<%= exam.price %></strong></li>
                </ul>
                <div class="flex-container">
                  <% exam.timeslots.each do |timeslot| %>
                    <%= link_to(
                      timeslot.date.to_formatted_s(:short),
                      new_timeslot_booking_path(timeslot),
                      class: "btn btn-secondary"
                    ) %>
                  <% end %>
                </div>


              <% end %>
            </div>
            <div class="col-6 p-0">
              <div class="" style="background-image: url(<%= asset_path 'clinic.jpeg' %>); height: 100%; width: 100%; object-fit: cover;"></div>
              <%#=link_to image_tag "clinic.jpeg", class: "" %>
            </div>
          </div>
        </div>
        <% end %>
    </div>
    <div class="col-6">
      <div style="width: 100%; height: 100vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
