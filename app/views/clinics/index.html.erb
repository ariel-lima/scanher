
  <h1>Clinic list</h1>

  <div class="row m-0">
    <div class="col-6">
      <% @clinics.each do |clinic| %>
          <div class="card border mb-3">
            <div class="row m-0">
              <div class="col-6">
                <h3><strong><li><%= clinic.name %></li></strong></h3>
                <% clinic.exams.each do |exam| %>
                  <div class="flex-container">
                    <%= exam.service_part.service.name %>
                    <%= exam.service_part.body_part.name %>
                  </div>

                  <div class="flex-container">
                    <% exam.timeslots.each do |time| %>
                      <li class="list-unstyled"><%= time.date.to_formatted_s(:short) %></li>
                    <% end %>
                  </div>

                  <strong> Price: <%= exam.price %></strong>

                <% end %>
              </div>
              <div class="col-6 p-0">
                <div class="" style="background-image: url(<%= asset_path 'clinic.jpeg' %>); height: 100%; width: 100%; object-fit: cover;"></div>
                <%#=link_to image_tag "clinic.jpeg", class: "" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
    <div class="col-6">
      <div style="width: 100%; height: 100vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

