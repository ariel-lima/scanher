<div class="container-signup-form">
  <div class= "signup_card">
      <h2><strong>Sign up</strong></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

          <div class="form-title">
            <%= f.input :title,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "title" }%>
          </div>

          <div class="form-fullname">
            <%= f.input :full_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "full name" }%>
            </div>

              <div class="form-photo">
                <%= f.input :photo,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "photo" }%>
              </div>

              <div class= "form-addres">
                <%= f.input :address,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address" }%>
              </div>

              <div class= "form-phone">
                <%= f.input :phone_number,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "phone number" }%>
              </div>

              <div class= "form-bday">
                <%= f.input :birthday,
                        required: true,
                        autofocus: true,
                        as: :date, end_year: Date.today.year - 90,
                        start_year: Date.today.year - 18,
                        order: [:day, :month, :year],
                        input_html: { autocomplete: "birthday" }%>
              </div>

              <div class= "form-emails">
                <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
              </div>

              <div class= "form-passwords">
                <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
              </div>

              <div class= "form-confirmation">
                <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Sign up" %>
              </div>

              <% end %>
              <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
