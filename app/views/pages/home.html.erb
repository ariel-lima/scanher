<div class="mask-group-div" data-controller="collections" data-collections-hash-value="<%= @body_part_services.to_json %>">
  <div class="homepage-div">
    <div class="scanher-background">
    <%= image_tag "1background.png"%>
    </div>
    <div class="form-home">
      <%= simple_form_for :exam, url: clinics_path, method: :get do |f| %>
        <%= f.input :body_part, collection: Exam::BODY_PART, data: { collections_target: "body-parts" }  %>
        <%= f.input :service, collection: Exam::SERVICE, input_html: { data: { action: 'change->collections#updateForm'} } %>
        <%= f.fields_for :clinic do |clinic_form| %>
        <%= clinic_form.input :address,
        input_html: {data: {address_autocomplete_target: "address"}},
        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
        <% end %>
        <br>

        <%= f.submit "Book Now", class: "btn-7" %>
      <% end %>
    </div>

